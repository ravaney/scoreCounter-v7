<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rl"
    android:layout_height="match_parent"
    android:background="@drawable/bluebg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="35sp"
        app:fontFamily="@font/black_ops_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/selectimage1"
        />

    <EditText
        android:id="@+id/team1"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/black_ops_one"
        android:ems="10"
        android:hint="Team 1"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/team2"
        android:layout_below="@id/selectimage1"
        android:layout_marginTop="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/black_ops_one"
        android:ems="10"
        android:hint="Team 2"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Start Game"
        android:textStyle="bold"
        android:fontFamily="@font/black_ops_one"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:id="@+id/selectimage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img1"
        android:text="Team Picture"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/selectimage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img2"
        android:text="Team Picture"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/img1"
        android:layout_below="@id/team1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/team"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/img2"
        android:layout_below="@id/team2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/team"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>